<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bgColor">


    <TextView
        android:id="@+id/text_view_tcp_state"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/tcp_disconnected" />

    <!--<LinearLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content">-->

        <!--<android.support.v7.widget.CardView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--app:cardBackgroundColor="@color/titleBgColor"-->
            <!--app:cardElevation="2dp"-->
            <!--app:cardPreventCornerOverlap="true"-->
            <!--app:cardUseCompatPadding="true">-->

            <LinearLayout
                android:background="@drawable/item_background_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/company_info_padding">

                    <TextView
                        android:layout_alignParentStart="true"
                        android:id="@+id/text_view_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:shadowColor="@color/green01"
                        android:shadowDx="3"
                        android:shadowDy="3"
                        android:shadowRadius="1.5"
                        android:textColor="@color/companyInfoTextColor"
                        android:textSize="@dimen/company_info_font_size" />

                    <TextView
                        android:layout_alignParentEnd="true"
                        android:id="@+id/text_view_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:textColor="@color/currentTimeTextColor"
                        android:textSize="@dimen/current_time_font_size" />
                </RelativeLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp">

                    <TextView
                        android:id="@+id/text_view_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingEnd="10dp"
                        android:paddingStart="10dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/text_view_quality"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingEnd="10dp"
                        android:paddingStart="10dp" />

                    <TextView
                        android:id="@+id/text_view_pm25"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingEnd="10dp"
                        android:paddingStart="10dp" />

                    <TextView
                        android:id="@+id/text_view_pm10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingEnd="10dp"
                        android:paddingStart="10dp" />

                    <TextView
                        android:id="@+id/text_view_cond"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingEnd="10dp"
                        android:paddingStart="10dp" />

                    <TextView
                        android:id="@+id/text_view_temperature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingEnd="10dp"
                        android:paddingStart="10dp" />

                    <TextView
                        android:id="@+id/text_view_wind"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingEnd="10dp"
                        android:paddingStart="10dp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:ellipsize="marquee"
                        android:lines="1"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:gravity="start"
                        android:id="@+id/text_view_weather"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:ellipsize="marquee"
                        android:lines="1"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:textColor="@color/weatherColor"
                        android:id="@+id/text_view_suggestion"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>
        <!--</android.support.v7.widget.CardView>-->
    <!--</LinearLayout>-->


    <LinearLayout
        android:background="@color/bgColor"
        android:id="@+id/layout_bus_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" />

</LinearLayout>
