<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="2dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:id="@+id/layout_bus_info_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="gone">

            <!--<android.support.v7.widget.CardView-->
                <!--android:id="@+id/card_view_name"-->
                <!--android:layout_weight="2"-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="match_parent">-->
                <!--app:cardBackgroundColor="@color/green01">-->
                <TextView
                    android:id="@+id/text_view_name"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"/>

            <!--</android.support.v7.widget.CardView>-->


            <com.changfeng.tcpdemo.widget.MultiScrollNumber
                style="@style/BusInfo"
                android:id="@+id/scroll_number_num"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center">


                <com.changfeng.tcpdemo.widget.MultiScrollNumber
                    style="@style/BusInfo"
                    android:id="@+id/scroll_number_hour"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/text_view_time_separator"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text=":" />

                <com.changfeng.tcpdemo.widget.MultiScrollNumber
                    style="@style/BusInfo"
                    android:id="@+id/scroll_number_minute"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            style="@style/BusInfo"
            android:id="@+id/text_view_ad"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center" />
    </android.support.v7.widget.CardView>

</LinearLayout>
